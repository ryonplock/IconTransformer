<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center_horizontal">

    <ImageView
        android:id="@+id/icon"
        android:padding="@dimen/icongrid_padding"
        android:layout_marginTop="@dimen/icongrid_top_margin"
        android:layout_marginBottom="@dimen/icongrid_bottom_margin"
        android:layout_centerInParent="true"
        android:layout_width="@dimen/icongrid_width"
        android:layout_height="@dimen/icongrid_height"
        android:src="@drawable/ic_launcher"
        android:scaleType="fitCenter" />

</RelativeLayout>